/* pages/talk/talk.wxss */

page, .wrapper {
    width: 100%;
    height: 100%;
}

.wrapper {
    position: relative;
    background: #e8e8e8;
}

.info {
    position: fixed;
    top: 20rpx;
    right: 0;
    width: 100rpx;
    height: 50rpx;
    border-radius: 10rpx 0 0 10rpx;
    background: white;
}

.list-wrapper {
    width: 100%;
    padding: 18rpx;
}

.list {
    display: flex;
    width: 100%;
    margin: 23rpx 0;
    clear: both;
}

.list image, .list video {
    width: 273rpx;
    height: 156rpx;
    border-radius: 10rpx;
}

.message {
    border-radius: 10rpx;
}

.message-list {
    justify-content: center;
    padding: 0 15rpx;
}

.my-list {
    justify-content: flex-end;
}

.message-list .message {
    padding: 10rpx 14rpx;
    background: #ccc;
    font-size: 19rpx;
    color: #fff;
    text-align: center;
}

.my-list .message, .other-list .message {
    height: 75rpx;
    padding: 0 19rpx;
    line-height: 75rpx;
    font-size: 30rpx;
    color: #000;
}

.my-list .avatar {
    order: 1;
}

.my-list .message {
    margin-right: 17rpx;
    background: #a0e75a;
}

.other-list .message {
    background: #fff;
}

.other-info {
    display: flex;
    flex-direction: column;
    margin-left: 17rpx;
}

.other-info .name {
    margin-bottom: 9rpx;
    font-size: 20rpx;
    color: #666;
}

.avatar {
    width: 75rpx;
    height: 75rpx;
    background: #448aca;
}
